                <ImageBrush ImageSource="/CLDC.CLWS.CLWCS.Service.WmsView;component/Images/btnBackground.png" Stretch="Fill"/>
            </Button.Background>
            <Button.Content>
                <TextBlock Text="环境设置" Foreground="White" FontSize="20px"/>
            </Button.Content>
        </Button>
        <Button  Grid.Row="1" Grid.Column="0" Width="109px" Height="46px" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="/CLDC.CLWS.CLWCS.Service.WmsView;component/Images/btnBackground.png" Stretch="Fill"/>
            </Button.Background>
            <Button.Content>
                <TextBlock Text="入库管理" Foreground="White" FontSize="20px"/>
            </Button.Content>
        </Button>
        <Button  Grid.Row="1" Grid.Column="1" Width="109px" Height="46px" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="/CLDC.CLWS.CLWCS.Service.WmsView;component/Images/btnBackground.png" Stretch="Fill"/>
            </Button.Background>
            <Button.Content>
                <TextBlock Text="报损管理" Foreground="White" FontSize="20px"/>
            </Button.Content>
        </Button>
        <Button  Grid.Row="2" Grid.Column="0" Width="109px" Height="46px" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="/CLDC.CLWS.CLWCS.Service.WmsView;component/Images/btnBackground.png" Stretch="Fill"/>
            </Button.Background>
            <Button.Content>
                <TextBlock Text="出库管理" Foreground="White" FontSize="20px"/>
            </Button.Content>
        </Button>
        <Button  Grid.Row="2" Grid.Column="1" Width="109px" Height="46px" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="/CLDC.CLWS.CLWCS.Service.WmsView;component/Images/btnBackground.png" Stretch="Fill"/>
            </Button.Background>
            <Button.Content>
                <TextBlock Text="视频监控" Foreground="White" FontSize="20px"/>
            </Button.Content>
        </Button>

    </Grid>
</UserControl>
