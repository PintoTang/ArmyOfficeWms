<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLDC.CLWCS.Service.MenuService.View"
             xmlns:wmsView="clr-namespace:CLDC.CLWS.CLWCS.Service.WmsView.View;assembly=CLDC.CLWS.CLWCS.Service.WmsView" x:Class="CLDC.CLWCS.Service.MenuService.View.MainContentView"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1100">
    <Border CornerRadius="15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="3">

            </DockPanel>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid  Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Content="库存管理" Height="40" Margin="5" Grid.Row="0" Grid.Column="0"></Button>
                        <Button Content="环境设置" Height="40" Margin="5" Grid.Row="0" Grid.Column="1"></Button>
                        <Button Content="入库管理" Height="40" Margin="5" Grid.Row="1" Grid.Column="0"></Button>
                        <Button Content="报损管理" Height="40" Margin="5" Grid.Row="1" Grid.Column="1"></Button>
                        <Button Content="出库管理" Height="40" Margin="5" Grid.Row="2" Grid.Column="0"></Button>
                        <Button Content="视频监控" Height="40" Margin="5" Grid.Row="2" Grid.Column="1"></Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <wmsView:UcChart x:Name="CtrlChart"/>
                    </Grid>
                </Grid>
            </Grid>
            <wmsView:UcEnvironMonitor Grid.Column="2" Grid.Row="1"/>
        </Grid>
    </Border>
</UserControl>
