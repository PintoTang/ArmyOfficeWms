<Window x:Class="CLDC.CLWS.CLWCS.Service.StartService.Login.AccountOutLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="退出系统密码验证" Width="450" Height="120" MinHeight="120" MinWidth="450"  ResizeMode="NoResize" BorderThickness="0" >
    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" >
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16*"/>
                    <ColumnDefinition Width="84*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" >
                    <Label Content="输入密码:" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <PasswordBox Name="TxtBoxInputPwd" BorderThickness="1" />
                </StackPanel>
            </Grid>
           
        </StackPanel>
        <StackPanel Grid.Row="1" >
            <Button Name="BtnCheckPwd"  Content="确定"  Click="BtnCheckPwd_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
