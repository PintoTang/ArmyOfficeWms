                        <Rectangle Fill="{StaticResource NormalColor}" VerticalAlignment="Top" Height="5" Margin="0,4,0,0" />
                        <Rectangle Fill="{StaticResource NormalColor}" VerticalAlignment="Bottom" Height="5" Margin="0,0,0,4" />
                        <Rectangle HorizontalAlignment="Left" Width="6" Fill="#FF001261" Margin="23,11,0,11" ></Rectangle>
                        <Rectangle HorizontalAlignment="Left" Width="6" Fill="#FF001261" Margin="71,11,0,11" ></Rectangle>
                        <StackPanel Orientation="Horizontal" Margin="5,0">
                            <Rectangle HorizontalAlignment="Left" Width="6" Fill="{StaticResource NormalColor}" Margin="10,5,0,5" ></Rectangle>
                            <Rectangle HorizontalAlignment="Left" Width="6" Fill="{StaticResource NormalColor}" Margin="10,5,0,5" ></Rectangle>
                            <Rectangle HorizontalAlignment="Left" Width="6" Fill="{StaticResource NormalColor}" Margin="10,5,0,5" ></Rectangle>
                            <Rectangle HorizontalAlignment="Left" Width="6" Fill="{StaticResource NormalColor}" Margin="10,5,0,5" ></Rectangle>
                            <Rectangle HorizontalAlignment="Left" Width="6" Fill="{StaticResource NormalColor}" Margin="10,5,0,5" ></Rectangle>

                        </StackPanel>
                        <Rectangle Margin="12,18" Fill="{StaticResource NormalColor}" >

                        </Rectangle>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

